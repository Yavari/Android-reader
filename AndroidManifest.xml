<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="se.yavari.hiddenwords"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="se.yavari.hiddenwords.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="se.yavari.hiddenwords.HeadingActivity"
            android:label="@string/title_activity_heading"
            android:parentActivityName="se.yavari.hiddenwords.MainActivity" >
        </activity>
        <activity
            android:name="se.yavari.hiddenwords.TextActivity"
            android:label="@string/title_activity_text"
            android:parentActivityName="se.yavari.hiddenwords.HeadingActivity"  >
        </activity>
    </application>

</manifest>